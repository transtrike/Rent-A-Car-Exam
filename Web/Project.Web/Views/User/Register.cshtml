@model RegisterWebModel

@{ ViewBag.Title = "Register"; }

<h1>User Registration</h1>

<div>
    <form method="post" asp-action="RegisterPost">
        <label asp-for="Username">Username*</label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
        <br />

        <label asp-for="Email">Email*</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <br />

        <label asp-for="FirstName">First Name*</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
        <br />

        <label asp-for="MiddleName">Middle Name*</label>
        <input asp-for="MiddleName" />
        <span asp-validation-for="MiddleName"></span>
        <br />

        <label asp-for="LastName">Last Name*</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
        <br />

        <label asp-for="Password">Password*</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <br />

        <label asp-for="EGN">EGN*</label>
        <input asp-for="EGN" />
        <span asp-validation-for="EGN"></span>
        <br />

        <label asp-for="PhoneNumber">Phone Number*</label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
        <br />

        <label asp-for="RememberMe">Remember Me</label>
        <input asp-for="RememberMe" />
        <br />
        <p>* Required</p>
        <button type="submit" class="btn btn-outline-primary">Register</button>
    </form>
</div>
